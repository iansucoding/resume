@model AspNetMVCMusicStore.Models.Genre

@{
    ViewBag.Title = "Browse Albums";
}
@section style{
    <style>
        #album-list {
        }

            #album-list li {
            }

                #album-list li img {
                    width: 50px;
                }
    </style>
}
<div class="genre">
    <h3><em>@Model.Name</em> Albums</h3>

    <ul id="album-list">
        @foreach (var album in Model.Albums)
        {
            <li>
                <a href="@Url.Action("Detail",new { id = album.AlbumId })">
                    <img alt="@album.Title" src="@album.AlbumArtUrl" />
                    <span>@album.Title</span>
                </a>
            </li>
        }
    </ul>
</div>